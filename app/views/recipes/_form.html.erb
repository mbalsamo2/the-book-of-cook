<%= form_for(@recipe) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :cook_time %>
  <%= f.text_field :cook_time %><br>

  <%= f.label :yeild %>
  <%= f.text_field :yeild %><br>

  <h4>List each new ingredient on a brand new line.</h4>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %><br>

  <h4>List each new instruction on a brand new line.</h4>
  <%= f.label :instructions %>
  <%= f.text_area :instructions %><br>

  <%= f.submit %>
<% end %>
