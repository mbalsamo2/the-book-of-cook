<%= form_for(@recipe) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :cook_time %>
  <%= f.text_field :cook_time %><br>

  <%= f.label :yeild %>
  <%= f.text_field :yeild %><br>

  <div>
   <h3>Add an Ingredient:</h3>
   <%= f.fields_for :ingredient, Ingredient.new do |ingredients|%>
       <%= ingredients.label :ingredient_name, "Ingredient:" %>
       <%= ingredients.text_field :ingredient_name %>
   <% end %>
 </div>

 <div>
  <h3>Add an Instruction:</h3>
  <%= f.fields_for :instruction, Instruction.new do |instructions|%>
      <%= instructions.label :instruction, "Instruction:" %>
      <%= instructions.text_field :instruction %>
  <% end %>
</div>

  <%= f.submit %>
<% end %>
